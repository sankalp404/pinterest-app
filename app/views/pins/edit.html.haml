.row
  .col-lg-8.offset-lg-2
    %h1 Edit pin
    = simple_form_for @pin do |f|
      = image_tag @pin.image.url(:thumb)
      = f.input :image, label: false, input_html: { class: 'form-control' }
      = f.input :title, error: 'Title is mandatory, please specify one'
      = f.input :description, as: :text, 
                              error: 'Please add a little info',
                              input_html: { rows: 10 }
      = f.button :submit, 'Update post', :class => 'btn btn-primary'
      .btn.btn-secondary
        = link_to 'Cancel', pin_path 

